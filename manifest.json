{
  "manifest_version": 3,
  "name": "Filtro Betano",
  "description": "Filtro de jogos para o site Betano",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://br.betano.com/*"
      ]
    }
  ]
}